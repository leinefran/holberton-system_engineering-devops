#!/usr/bin/env bash
# a bash script to configure a custom 404 error page on Nginx:

apt-get update
apt-get -y install nginx
echo -e "Ceci n'est pas une page\n" > /usr/share/nginx/html/404.html
sed -i 's|#error_page 404 /404.html;|error_page 404 /404.html;|' /etc/nginx/sites-available/default
service nginx restart
