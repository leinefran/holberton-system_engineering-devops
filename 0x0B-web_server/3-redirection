#!/usr/bin/env bash
# a bash script that configures the Nginx server to redirect to another page.

sudo apt-get update
sudo apt-get -y install nginx
echo "Holberton School" > /usr/share/nginx/html/index.html"
sudo service nginx start
sed -i "0,|server_name localhost;|s|server_name localhost; \n\t location /redirect_me{\n\t\t return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n" /etc/nginx/sites-available/default
sudo service nginx restart
