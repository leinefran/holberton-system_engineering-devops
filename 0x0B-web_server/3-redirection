#!/usr/bin/env bash
# a bash script that configures the Nginx server to redirect to another page.

apt-get update
apt-get -y install nginx
file=/etc/nginx/sites-available/default
service nginx start
echo "Holberton School for the win!" | sudo tee /usr/share/nginx/html/index.html
service nginx start
file="/etc/nginx/sites-available/default"
sed -i '/^\tserver_name localhost;/ a\\n\tlocation \/redirect_me \{\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t\}\n' $file
service nginx restart
